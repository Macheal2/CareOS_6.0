<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
	    android:id="@+id/customer_service_dialog_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/i99_dialog_top_bg">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/i99_customer_service_photo"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CareTextStyle"
                    android:text="@string/customer_service_name" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/i99_dialog_bottom_light_bg">

                <View style="@style/CareHorizontalLine"/>

                <LinearLayout
                    android:id="@+id/call_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/i99_custom_service_bg"
                    android:gravity="center_vertical">

                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CareTextStyle_gray"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="@string/i99_customer_call_me" />

                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CareTextStyle_gray"
                        android:layout_marginLeft="10dp"
                        android:text="@string/customer_service_number_show" />

                </LinearLayout>

                <View style="@style/CareHorizontalLine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    style="@style/CareTextStyle_gray"
                    android:text="@string/i99_customer_concern" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/cappu_bu"
                        style="@style/I99ConcernButtonStyle"
                        android:src="@drawable/i99_cappu_dimensional_code"/>

                    <ImageButton
                        android:id="@+id/careos_bu"
                        style="@style/I99ConcernButtonStyle"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/i99_careos_dimensional_code"/>

                </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/i99_custom_service_slogan" />

            <View android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/i99_dialog_bottom_bg"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
