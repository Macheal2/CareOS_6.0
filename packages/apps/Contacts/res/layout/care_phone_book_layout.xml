<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:care="http://schemas.android.com/apk/prv/res/com.cappu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/i99_bg">

    <com.cappu.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        care:text="@string/i99_title_group"
	care:leftVisibility="gone"
	care:rightVisibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/i99_family_group"
                style="@style/CareGroupBuStyle"
                android:text="@string/i99_family"
                android:background="@drawable/i99_group_family_bg"
                android:drawableTop="@drawable/i99_ic_contact_jt"/>

            <TextView
                android:id="@+id/i99_relatives_group"
                style="@style/CareGroupBuStyle"
                android:layout_marginLeft="3dp"
                android:text="@string/i99_relatives"
                android:background="@drawable/i99_group_relative_bg"
                android:drawableTop="@drawable/i99_ic_contact_qq"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/i99_friend_group"
                style="@style/CareGroupBuStyle"
                android:text="@string/i99_friend"
                android:background="@drawable/i99_group_friend_bg"
                android:drawableTop="@drawable/i99_ic_contact_ly"/>

            <TextView
                android:id="@+id/i99_community_group"
                style="@style/CareGroupBuStyle"
                android:layout_marginLeft="3dp"
                android:text="@string/i99_community"
                android:background="@drawable/i99_group_community_bg"
                android:drawableTop="@drawable/i99_ic_contact_sq"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/i99_recent"
                style="@style/CareGroupBuStyle"
                android:text="@string/i99_recent"
                android:background="@drawable/i99_group_recent_bg"
                android:drawableTop="@drawable/i99_ic_recent_contact"/>

            <TextView
                android:id="@+id/i99_all"
                style="@style/CareGroupBuStyle"
                android:layout_marginLeft="3dp"
                android:text="@string/i99_all"
                android:background="@drawable/i99_group_all_bg"
                android:drawableTop="@drawable/i99_ic_contact_choose"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
