<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/i99_item_bg">

    <ImageView
        android:id="@+id/action"
        android:layout_width="@dimen/care_item_photo_size"
        android:layout_height="@dimen/care_item_photo_size"
        android:src="@drawable/i99_ic_action_call_bg" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        style="@style/CareTextStyle.ListItem"/>
</LinearLayout>
