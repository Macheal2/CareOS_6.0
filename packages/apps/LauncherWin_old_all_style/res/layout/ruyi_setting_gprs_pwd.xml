<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/whole_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlelayout_style_cancel_title_option" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EEE"
        android:orientation="vertical" >

        <!-- android:background="@drawable/bg_drawable_setting" -->

        <LinearLayout
            android:id="@+id/pull_whole"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ruyi_setting_margin_left"
            android:layout_marginRight="@dimen/ruyi_setting_margin_left"
            android:orientation="vertical"
            android:paddingTop="@dimen/ruyi_setting_margin_top" >

            <RelativeLayout
                android:id="@+id/pwd_state_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ruyi_setting_item_height"
                android:background="@drawable/bg_selector_top" >

                <TextView
                    android:id="@+id/pwd_state_info"
                    style="@style/ruyisetting_info_sytle"
                    android:text="@string/gprs_on_pwd_state" />

                <RelativeLayout style="@style/ruyisetting_rightlayout_sytle" >

                    <ImageButton
                        android:id="@+id/pwd_state_switch"
                        style="@style/ruyisetting_openoff_sytle" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3px"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/dividing_h" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pwd_set_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ruyi_setting_item_height"
                android:background="@drawable/bg_selector_middle" >

                <TextView
                    android:id="@+id/pwd_set_info"
                    style="@style/ruyisetting_info_sytle"
                    android:text="@string/privacy_set_password" />

                <LinearLayout
                    style="@style/ruyisetting_rightlayout_sytle" >

                    <ImageView
                        style="@style/ruyisetting_arrow_sytle" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3px"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/dividing_h" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pwd_reset_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ruyi_setting_item_height"
                android:background="@drawable/bg_selector_bottom" >

                <TextView
                    android:id="@+id/pwd_reset_info"
                    style="@style/ruyisetting_info_sytle"
                    android:text="@string/privacy_reset_password" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>