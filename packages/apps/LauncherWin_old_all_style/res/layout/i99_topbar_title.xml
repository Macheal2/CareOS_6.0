<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/i99_topbar_height"
    android:gravity="center"
    android:background="@drawable/butt_titalbar_left_normal"
    android:orientation="horizontal"
    android:weightSum="9" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:background="@drawable/i99_topbar_button_bg"
        android:src="@drawable/icon_back" />

    <View  android:id="@+id/divie_left"
        style="@style/I99TopBarLine"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:singleLine="true"
        style="@style/i99TextStyle"
        android:ellipsize="marquee" 
        android:focusableInTouchMode="true"
        android:focusable="true" 
        android:marqueeRepeatLimit="marquee_forever"/>

    <View android:id="@+id/divie_right"
        style="@style/I99TopBarLine"/>

    <ImageButton
        android:id="@+id/option"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/i99_topbar_button_bg"
        android:src="@drawable/icon_option" />

</LinearLayout>
