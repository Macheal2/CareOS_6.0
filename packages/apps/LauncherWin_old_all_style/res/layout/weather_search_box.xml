<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_search_box_background"
    android:focusable="true"
    android:focusableInTouchMode="true" >
    
	<ImageView
        android:id="@+id/btn_cancel_search"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_title_btn_bg"
        android:src="@drawable/ic_actionbar_back_normal" />
   <ImageView
            android:id="@+id/btn_image"
            android:layout_width="1dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btn_cancel_search"
            android:background="@color/grey"
            android:gravity="center" />
