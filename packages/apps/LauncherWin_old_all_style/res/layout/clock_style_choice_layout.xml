<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:careos="http://schemas.android.com/apk/prv/res/com.cappu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlelayout_style_cancel_title_option" />

    <LinearLayout
        android:id="@+id/clock_enable"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ruyi_setting_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/ruyi_setting_margin_top"
        android:background="@drawable/bg_selector_one"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            style="@style/ruyisetting_info_sytle"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:text="@string/clock_start" />

        <ImageButton
            android:id="@+id/clock_state_switch"
            style="@style/ruyisetting_openoff_sytle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_selector_one"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/clock_style_choice"
            android:textSize="23dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eddded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/analog_clock_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/analog_clock"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_analog_img" />

                <Button
                    android:id="@+id/analog_clock_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/clock_text_unselected"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digital_clock_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/digital_clock"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_digital_img" />

                <Button
                    android:id="@+id/digital_clock_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/clock_text_selected"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>