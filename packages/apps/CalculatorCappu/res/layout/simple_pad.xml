<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/simple_padding_right"
    android:paddingLeft="@dimen/simple_padding_left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/clr"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/desc_clr"
            android:onClick="onButtonClick"
            android:text="@string/clr"
            android:textColor="#ff8040" />

        <Button
            android:id="@+id/del"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/desc_del"
            android:onClick="onButtonClick"
            android:text="@string/del" />

        <Button
            android:id="@+id/op_div"
            style="@style/button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/desc_op_div"
            android:onClick="onButtonClick"
            android:text="@string/op_div" />

        <Button
            android:id="@+id/op_mul"
            style="@style/button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/op_mul"
            android:onClick="onButtonClick"
            android:text="@string/op_mul" />
    </LinearLayout>
    <!-- 7 8 9 - -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/digit_7"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/digit_7"
            android:onClick="onButtonClick"
            android:text="@string/digit_7" />

        <Button
            android:id="@+id/digit_8"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:contentDescription="@string/digit_8"
            android:text="@string/digit_8" />

        <Button
            android:id="@+id/digit_9"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:contentDescription="@string/digit_9"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/digit_9" />

        <Button
            android:id="@+id/op_sub"
            style="@style/button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:contentDescription="@string/desc_op_sub"
            android:onClick="onButtonClick"
            android:text="@string/op_sub" />
    </LinearLayout>

    <!-- 4 5 6 + -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/digit_4"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/digit_4"
            android:onClick="onButtonClick"
            android:text="@string/digit_4" />

        <Button
            android:id="@+id/digit_5"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/digit_5"
            android:onClick="onButtonClick"
            android:text="@string/digit_5" />

        <Button
            android:id="@+id/digit_6"
            style="@style/digit_button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/digit_6"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/digit_6" />

        <Button
            android:id="@+id/op_add"
            style="@style/button_style"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/desc_op_add"
            android:onClick="onButtonClick"
            android:text="@string/op_add" />
    </LinearLayout>
<!--1 2 3 =-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
	android:layout_weight="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
		        android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/digit_1"
                    style="@style/digit_button_style"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/digit_1"
                    android:onClick="onButtonClick"
                    android:text="@string/digit_1" />

                <Button
                    android:id="@+id/digit_2"
                    style="@style/digit_button_style"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/digit_2"
                    android:onClick="onButtonClick"
                    android:text="@string/digit_2" />

                <Button
                    android:id="@+id/digit_3"
                    style="@style/digit_button_style"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/digit_3"
                    android:onClick="onButtonClick"
                    android:text="@string/digit_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/digit_0"
                    style="@style/digit0_button_style"
                    android:layout_width="0dip"
                    android:contentDescription="@string/digit_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="onButtonClick"
                    android:text="@string/digit_0" />

                <Button
                    android:id="@+id/dec_point"
                    style="@style/digit_button_style"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_dec_point"
                    android:onClick="onButtonClick"
                    android:text="@string/dec_point" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/eq"
                style="@style/equal_button_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/desc_eq"
                android:onClick="onButtonClick"
                android:text="@string/eq" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
