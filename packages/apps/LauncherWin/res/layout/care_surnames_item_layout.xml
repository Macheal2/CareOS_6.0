<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/header"
        android:layout_width="@dimen/care_surname_button_size"
        android:layout_height="@dimen/care_surname_button_size"
        android:background="@drawable/care_gray_button_bg"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="2px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <com.cappu.launcherwin.mms.contact.NoScrollGridView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />

</LinearLayout>
