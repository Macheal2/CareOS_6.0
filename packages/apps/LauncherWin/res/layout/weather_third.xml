<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <com.cappu.launcherwin.widget.AutoAjustSizeTextView
        android:id="@+id/week_third"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_text_future_size" />

    <ImageView
        android:id="@+id/weather_img_third"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="centerInside" />

    <com.cappu.launcherwin.widget.AutoAjustSizeTextView
        android:id="@+id/temperature_third"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-22dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_text_future_size" />

    <com.cappu.launcherwin.widget.AutoAjustSizeTextView
        android:id="@+id/climate_third"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_text_future_size" />

    <com.cappu.launcherwin.widget.AutoAjustSizeTextView
        android:id="@+id/wind_third"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/weather_text_future_size"
        android:layout_marginBottom="10dp" />

</LinearLayout>