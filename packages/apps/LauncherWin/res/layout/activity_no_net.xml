<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlelayout_style_cancel_title_option" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66sp"
        android:background="@drawable/cloud_classroom" />

    <Button
        android:id="@+id/btn_reload"
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:background="@drawable/cloud_classrom_btn_normal"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="38dp"
        android:text="@string/no_net_reload"
        android:textColor="#009dde"
        android:textSize="17sp"/>

</FrameLayout>
