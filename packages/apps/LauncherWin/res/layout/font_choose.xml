<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/font_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >
              <!-- 小 -->

            <RelativeLayout
                android:id="@+id/small_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_listitem_selector"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="center"
                    android:text="@string/font_level_small"
                    android:textColor="#505050"
                    android:textSize="24.0sp" />
                <!-- 34.0sp @dimen/xl_text_size -->

                <CheckBox
                    android:id="@+id/small_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21.0dip"
                    android:button="@drawable/i99_checked_bg"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@drawable/line_a_2px" />
            <!-- 默认 -->

            <RelativeLayout
                android:id="@+id/big_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_listitem_selector"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/big_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="center"
                    android:text="@string/font_level_big"
                    android:textColor="#505050"
                    android:textSize="28.0sp" />
                <!-- 34.0sp @dimen/xl_text_size -->

                <CheckBox
                    android:id="@+id/big_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21.0dip"
                    android:button="@drawable/i99_checked_bg"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@drawable/line_a_2px" />

            <!-- 大号 -->

            <RelativeLayout
                android:id="@+id/big_more_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_listitem_selector"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/big_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="center"
                    android:text="@string/font_level_big_most"
                    android:textColor="#505050"
                    android:textSize="33.0sp" />
                <!-- 38.0sp @dimen/xxl_text_size -->

                <CheckBox
                    android:id="@+id/big_more_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21.0dip"
                    android:button="@drawable/i99_checked_bg"
                    android:gravity="center" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>