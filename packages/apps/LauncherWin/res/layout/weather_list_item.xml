<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_city_list_item_bg_selector">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal" >
    
   <TextView
       android:id="@+id/city_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:gravity="center_vertical"
       android:minHeight="40dp"
       android:paddingLeft="20dp"
       android:textColor="@drawable/ic_city_list_item_text_color"
       android:textSize="@dimen/city_list_text_size" />

	<TextView
	    android:id="@+id/selected"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="8dp"
	    android:background="@drawable/ic_selected_bg"
	    android:gravity="top"
	    android:text="@string/selected"
	    android:textColor="@drawable/ic_city_list_item_text_color"
	    android:textSize="@dimen/city_list_selected_size"
	    android:visibility="invisible" />
	</LinearLayout>


	<ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center|end"
       		android:gravity="center|end" />
  
</FrameLayout>