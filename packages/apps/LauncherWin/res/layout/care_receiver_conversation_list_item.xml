<?xml version="1.0" encoding="utf-8"?>
<com.cappu.launcherwin.mms.data.MessageListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/care_conversation_receiver"
    android:layout_height="wrap_content">
    <com.cappu.launcherwin.mms.widget.CareTextView
        android:autoLink="all"
        android:layout_margin="@dimen/care_margin_normal"
        android:id="@+id/message_body"
        android:textIsSelectable="false"
        android:padding="@dimen/care_margin_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C0000000"
        android:textSize="@dimen/care_small_topbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="-5dp"
        android:alpha="0.3"
        android:background="#ff333333"
        android:layout_margin="@dimen/care_margin_middle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/care_margin_middle"
        android:layout_marginRight="@dimen/care_margin_middle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/care_conversation_date"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_marginRight="@dimen/care_margin_normal"
            android:layout_marginLeft="@dimen/care_margin_normal"
            android:textColor="#BB000000"
            android:textSize="@dimen/care_normal_topbar_sub"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/care_conversation_read"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:background="@drawable/care_conversation_read_normal"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.cappu.launcherwin.mms.data.MessageListItem>
