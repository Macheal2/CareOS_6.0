<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i99_bg"
    android:orientation="vertical" >

    <include layout="@layout/i99_topbar_group" />

    <ListView
        android:id="@+id/contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/i99_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/i99_topbar_height"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/add_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/i99TextStyle_black"
            android:background="@drawable/i99_bottom_button_bg"
            android:text="@string/i99_add" />

        <View style="@style/I99VerticalLine"/>

        <Button
            android:id="@+id/remove_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/i99TextStyle_black"
            android:background="@drawable/i99_bottom_button_bg"
            android:text="@string/i99_remove" />
    </LinearLayout>

</LinearLayout>
