<resources>
        <style name="CareHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/care_line_h</item>
    </style>
    <style name="CareVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/care_line_v</item>
    </style>
     <style name="I99VerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/care_line_v</item>
    </style>
    <style name="CareContactListSeparatorTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/people_app_theme_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="BottomButtonStyle">
        <item name="android:textColor">@color/gay_color_dark</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/care_text_size_default</item>
        <item name="android:background">@drawable/care_bottom_button_bg</item>
    </style>

    <!-- When this style was added, android:toolbarStyle was private. Therefore, this style
         must be directly applied to every toolbar -->
    <style name="ContactsToolbarStyle" parent="@android:style/Widget.Toolbar">
        <item name="android:titleTextAppearance">@style/ContactsActionBarTitleText</item>
    </style>
    <!-- Text in the action bar at the top of the screen -->
    <style name="ContactsActionBarTitleText"
           parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>
        <style name="CareTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/care_text_size_default</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="CareTextStyle_gray" parent="CareTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="CareTextStyle_middle" parent="CareTextStyle_gray">
        <item name="android:textSize">@dimen/care_text_size_middle</item>
    </style>
</resources>
