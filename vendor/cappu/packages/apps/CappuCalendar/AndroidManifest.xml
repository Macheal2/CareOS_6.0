<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cappu.calendar"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
        
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity
            android:name="com.cappu.calendar.CalendarActivity"
            android:label="@string/desktop_title_calendar"
            android:launchMode="singleTask"
            android:icon="@drawable/application_calendar"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait" > <!-- android:theme="@style/Transparent" -->
        </activity>
        <activity
            android:name="com.cappu.calendar.DetailsCalendarActivity"
            android:label="@string/desktop_title_calendar"
            android:launchMode="singleTask"
            android:icon="@drawable/application_calendar"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait" > <!-- android:theme="@style/Transparent" -->
        </activity>
         <activity
            android:name="com.cappu.calendar.FirstActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:icon="@drawable/application_calendar"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
