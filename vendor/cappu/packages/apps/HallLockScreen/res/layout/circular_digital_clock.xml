<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res/com.cappu.halllockscreen"
    android:id="@id/time_digital"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/bird_circular_clock_digital_top_padding" >

    <TextView
        android:id="@id/bird_ampm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@id/bird_hour_high"
            style="@style/bird_image_clock_number_style" />

        <ImageView
            android:id="@id/bird_hour_low"
            style="@style/bird_image_clock_number_style" />

        <ImageView
            android:id="@id/bird_dot"
            style="@style/bird_image_clock_dot_style" />

        <ImageView
            android:id="@id/bird_minute_high"
            style="@style/bird_image_clock_number_style" />

        <ImageView
            android:id="@id/bird_minute_low"
            style="@style/bird_image_clock_number_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="15.0dip" >

        <TextView
            android:id="@id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="20.0sp"/>

        <TextView
            android:id="@id/weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8.0dip"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="20.0sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@id/bird_lunar_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="17.0sp"
            android:text="@string/lunar_string"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@id/lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="17.0sp"
            android:text="@string/lunar_string"
            android:textColor="@color/text_color" />
    </LinearLayout>
</LinearLayout>