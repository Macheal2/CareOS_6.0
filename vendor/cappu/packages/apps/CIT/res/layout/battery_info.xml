<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">


	<TextView android:id="@+id/judge" android:textSize="24.0dip"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="@string/battery_info_judge" />
	<LinearLayout android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:textSize="24.0dip" android:text="@string/battery_info"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<TextView android:id="@+id/battery_info_res"
			android:textSize="24.0dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<TextView android:id="@+id/result" android:gravity="center"
		android:textSize="24.0dip" android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<include layout="@layout/pass_fail_buttons"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true" />
</LinearLayout>
