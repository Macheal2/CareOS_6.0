<?xml version="1.0" encoding="UTF-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_centerInParent="true"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical"
					android:textSize="50.0dip" 
		>

	<!-- Notice -->
	<TextView android:textSize="30.0dip" 
	   android:id="@+id/runin_title" 
	   android:textColor="#FF0000"   
	   android:layout_width="fill_parent" 
	   android:layout_height="wrap_content" 
	   android:text="@string/runin_test_notice" />

	<!-- select  test time -->
		<LinearLayout android:id="@+id/LinearLayout" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingTop="50dip"
			android:layout_marginLeft = "10dip"
			android:orientation="horizontal"
			>
	  
			 <TextView android:text="@string/TestDuration" 
						android:layout_width="130dip" 
						android:layout_height="wrap_content"
						
						></TextView>
			<Spinner android:id="@+id/spinner_duration" 
						android:layout_height="wrap_content" 
						android:layout_width="180dip"></Spinner>
		 </LinearLayout>
		 <!-- begin button  -->
	 <Button android:text="@string/Begin" 
					android:id="@+id/btn_begin" 
					android:layout_width="180dip" 
					android:layout_height="wrap_content"
					></Button>
		 <!-- stop button  -->
	 <Button android:text="@string/Stop" 
					android:id="@+id/btn_stop" 
					android:layout_width="180dip" 
					android:layout_height="wrap_content"
					></Button>
	</LinearLayout>

