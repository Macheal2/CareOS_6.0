<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:textSize="20.0dip" android:layout_width="fill_parent"
		android:layout_marginTop="30dip" android:id="@+id/tv_calibration_title"
		android:layout_height="wrap_content" android:text="@string/proximity_calibration_illustration" />
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:paddingTop="100dip"
		android:layout_marginLeft="30dip" android:orientation="vertical"
		android:gravity="center_horizontal">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center_horizontal">

			<Button android:textSize="20.0dip" android:id="@+id/ps_calibration_far"
				android:layout_width="200.0dip" android:layout_height="50dip"

				android:text="@string/proximity_calibration_far" />

			<TextView android:textSize="20.0dip" android:layout_width="wrap_content"
				android:id="@+id/tv_far_calibration_res" android:layout_height="wrap_content"
				android:text="@string/no_calibration" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center_horizontal">

			<Button android:textSize="20.0dip" android:id="@+id/ps_calibration_middle"
				android:layout_width="200.0dip" android:layout_height="50dip"

				android:text="@string/proximity_calibration_40" />
			<TextView android:textSize="20.0dip" android:layout_width="wrap_content"
				android:id="@+id/tv_4cm_calibration_res" android:layout_height="wrap_content"
				android:text="@string/no_calibration" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:gravity="center_horizontal">

			<Button android:textSize="20.0dip" android:id="@+id/ps_calibration_close"
				android:layout_width="200.0dip" android:layout_height="50dip"
				android:text="@string/proximity_calibration_30" />
			<TextView android:textSize="20.0dip" android:layout_width="wrap_content"
				android:id="@+id/tv_3cm_calibration_res" android:layout_height="wrap_content"
				android:text="@string/no_calibration" />
		</LinearLayout>

		<TextView android:textSize="20.0dip" android:layout_width="fill_parent"
			android:id="@+id/tv_calibration" android:layout_height="wrap_content"
			android:text="@string/proximity_calibration_info_far" />
		<TextView android:textSize="20.0dip" android:layout_width="fill_parent"
			android:id="@+id/tv_ps_value" android:layout_height="wrap_content" />
		<TextView android:textSize="30.0dip" android:layout_width="fill_parent"
			android:id="@+id/tv_calibration_result" android:layout_height="wrap_content" />
	</LinearLayout>



	<include layout="@layout/pass_fail_buttons"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" />
</RelativeLayout>