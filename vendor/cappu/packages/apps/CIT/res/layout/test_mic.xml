<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_marginTop="12dip">
		<sim.android.mtkcit.testitem.VerticalSeekBar
			android:id="@+id/SeekBarLeft" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<sim.android.mtkcit.testitem.VUMeter android:id="@+id/uvMeter"
			android:layout_width="200dip" android:layout_height="80dip"
			android:layout_centerInParent="true" />

		<sim.android.mtkcit.testitem.VerticalSeekBar
			android:id="@+id/SeekBarRight" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:layout_centerInParent="true"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@android:drawable/title_bar" android:gravity="center_horizontal"
		android:orientation="vertical">
<!--  
		<ImageButton android:id="@+id/recordButton"
			android:layout_height="wrap_content" style="@android:style/MediaButton"
			android:src="@drawable/play" />
-->

		<TextView android:id="@+id/textDescript" android:textSize="24.0dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#000000" />


	</LinearLayout>

	<include layout="@layout/pass_fail_buttons"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" />

</RelativeLayout>
