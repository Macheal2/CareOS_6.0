<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/biaoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/biaoti"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#3399ff"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#3399ff"
            />
        <TextView 
            android:id="@+id/rename_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rename_playlist_menu"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/gridview_item_longclick"
            android:clickable="true"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#999999"
            />
        <TextView 
            android:id="@+id/delete_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_song"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/gridview_item_longclick"
            android:clickable="true"
            />
        
    </LinearLayout>
    
 
</RelativeLayout>
