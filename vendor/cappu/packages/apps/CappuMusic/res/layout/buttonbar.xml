<TabWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/touchInterceptor_list_item_bg" >

    <TextView
        android:id="@+id/play_list"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:background="@drawable/music_buttonbar"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:textSize="20dip"
        android:paddingBottom="4dip"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:text="@string/music_play_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/tab_indicator_text" />

    <TextView
        android:id="@+id/play_folder"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="1"
        android:background="@drawable/music_buttonbar"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:textSize="20dip"
        android:paddingBottom="4dip"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:text="@string/music_play_folder"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/tab_indicator_text" />
    <!--
         android:background="@drawable/buttonbarbackground"
        android:drawableTop="@drawable/tab_playlists"
    -->

</TabWidget>