<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="topbarStyle" format="reference" />
    <declare-styleable name="CareStyle">
        <attr name="titleBackground" format="reference|color" />
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleClickable" format="boolean" />
        <attr name="secretable" format="boolean" />
        <attr name="subText" format="string" />
        <attr name="subTextSize" format="dimension" />
        <attr name="leftImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="leftVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="rightVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="dialogTitleBackground" format="reference|color" />

        <!-- 应用参数 -->
        <attr name="title_bg" format="reference" />
        <attr name="title_font_color" format="reference|color" />
        <attr name="title_font_size" format="dimension" />
        <attr name="title_icon_width" format="dimension" />
        <attr name="title_icon_height" format="dimension" />
        <attr name="context_bg" format="reference" />
        <attr name="item_font_color" format="reference|color" />
        <attr name="item_font_size" format="dimension" />
        <attr name="item_icon_width" format="dimension" />
        <attr name="item_icon_height" format="dimension" />
        <!-- 应用参数 end -->
    </declare-styleable>
    <!-- 主题 end -->
    
</resources>
