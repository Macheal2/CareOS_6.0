<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">        
        <TextView
            android:id="@+id/i99_theme_dialog_title"
	    android:gravity="center"
            android:layout_width="@dimen/i99_dialog_theme_width"
            android:layout_height="@dimen/detail_title_height"
            android:background="@drawable/dialog_top_bar_bg"
            android:textColor="#FFF"
	    android:paddingTop="360dp"
	    android:textSize="@dimen/i99dialog_title_textsize"/>
	<TextView
	    android:layout_below="@id/i99_theme_dialog_title"
	    android:id="@+id/dialog_info_show"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#FF404040"
	    android:gravity="center_vertical"
	    android:padding="5dip"
	    android:minHeight="110dip"
	    android:textSize="32sp"
	/>

	<LinearLayout
	    android:layout_below="@id/dialog_info_show"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

	<LinearLayout
	    android:id="@+id/i99_dialog_content_only_one"
	    android:layout_below="@id/dialog_info_show"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1.0"
	    android:orientation="horizontal">
	   <Button	    
	        android:paddingBottom="@dimen/i99_dialog_text_padding"
		android:id="@+id/i99_dialog_only_one"
		android:layout_width="0dip"
	        android:layout_height="@dimen/detail_title_height"
		android:layout_weight="1.0"	  
	        android:gravity="center"
		android:background="@drawable/i99_dialog_button_only_one"
		android:textColor="#000"
		android:textSize="@dimen/i99dialog_title_textsize"
		android:text="@string/i99_dialog_left"/>	
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/i99_dialog_content_buttons"
	    android:layout_width="match_parent"
	    android:layout_below="@id/dialog_info_show"
	    android:layout_height="0dip"
	    android:layout_weight="1.0"
	    android:orientation="horizontal">
		<Button	    
	            android:paddingBottom="@dimen/i99_dialog_text_padding"
		    android:id="@+id/i99_dialog_left"
		    android:layout_width="0dip"
	            android:layout_height="@dimen/detail_title_height"
		    android:layout_weight="1.0"	  
	            android:gravity="center"
		    android:background="@drawable/i99_dialog_button_left"
		    android:textColor="#000"
		    android:textSize="@dimen/i99dialog_title_textsize"
		    android:text="@string/i99_dialog_left"/>
		<View
		    android:layout_width="1dip"
		    android:layout_height="@dimen/detail_title_height"
		    android:background="#FF929292"/>
	        <Button	    
	            android:paddingBottom="@dimen/i99_dialog_text_padding"
		    android:id="@+id/i99_dialog_middle"
		    android:layout_width="0dip"
	            android:layout_height="@dimen/detail_title_height"
		    android:layout_weight="1.0"	  
	            android:gravity="center"
		    android:background="@drawable/i99_dialog_button_middle"
		    android:textColor="#000"
		    android:textSize="@dimen/i99dialog_title_textsize"
		    android:text="@string/i99_dialog_middle"/>
		<View
   		    android:id="@+id/second_divid"
		    android:layout_width="1dip"
		    android:layout_height="@dimen/detail_title_height"
		    android:background="#FF929292"/>
		<Button	    
	            android:paddingBottom="@dimen/i99_dialog_text_padding"
		    android:id="@+id/i99_dialog_right"
	            android:gravity="center"
 		    android:layout_width="0dip"
	            android:layout_height="@dimen/detail_title_height"
		    android:layout_weight="1.0"
		    android:background="@drawable/i99_dialog_button_right"
		    android:textColor="#000"
		    android:textSize="@dimen/i99dialog_title_textsize"
		    android:text="@string/i99_dialog_right"/>
	</LinearLayout>
     </LinearLayout>
</RelativeLayout>
