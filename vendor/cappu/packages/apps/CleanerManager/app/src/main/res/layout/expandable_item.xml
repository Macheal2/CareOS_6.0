<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/expandable_list_margin_bottom"
                android:paddingTop="@dimen/expandable_list_margin_top"
                android:paddingLeft="@dimen/expandable_list_margin_top"
                android:paddingRight="@dimen/expandable_list_margin_top">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_icon"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/expandable_list_item_main_title_text_size"/>

        <TextView
            android:id="@+id/sub_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/expandable_list_item_sub_title_text_size"/>
    </LinearLayout>

    <Switch
        android:id="@+id/switch_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/file_size_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/switch_item"
        android:textSize="@dimen/expandable_list_item_right_text_size"
        android:layout_centerVertical="true"/>
</RelativeLayout>
