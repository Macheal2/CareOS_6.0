<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dip"
    android:layout_marginRight="2dip"
    android:orientation="horizontal"
    android:paddingBottom="12dip"
    android:paddingTop="12dip" >

    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/color_point"
            android:layout_width="7dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="2dp" />

        <TextView
            android:id="@+id/drug_box_name"
            style="@style/my_textview_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|left" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right" >

            <TextView
                android:id="@+id/drug_box_number"
                style="@style/my_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/drug_box_unit"
                style="@style/my_textview_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/drug_box_duetime"
            style="@style/my_textview_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|right" />

        <CheckBox
            android:id="@+id/del_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingRight="2dp"
            android:visibility="gone" />
        <!-- android:background="@drawable/delete_image_selector" -->
    </LinearLayout>

</LinearLayout>