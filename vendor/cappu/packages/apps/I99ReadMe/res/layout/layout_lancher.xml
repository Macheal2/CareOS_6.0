<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_manual"
            style="@style/ReadMeItemStyle"
            android:background="@drawable/blue_bg"
            android:src="@drawable/icon_user_manual" />

        <ImageView
            android:id="@+id/weixin"
            style="@style/ReadMeItemStyle"
            android:layout_marginLeft="@dimen/readme_item_padding"
            android:background="@drawable/green_bg"
            android:src="@drawable/icon_weixin" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/readme_item_padding"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/media_manager"
            style="@style/ReadMeItemStyle"
            android:background="@drawable/yellow_bg"
            android:src="@drawable/icon_media_manager" />

        <ImageView
            android:id="@+id/faq"
            style="@style/ReadMeItemStyle"
            android:layout_marginLeft="@dimen/readme_item_padding"
            android:background="@drawable/pink_bg"
            android:src="@drawable/icon_faq" />

    </LinearLayout>

</LinearLayout>