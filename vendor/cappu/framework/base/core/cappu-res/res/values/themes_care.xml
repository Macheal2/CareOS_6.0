<resources>
    <style name="CareTheme" parent="android:Theme.Material.Light">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listDivider">@drawable/line</item>
        <item name="android:listPreferredItemHeightSmall">80dp</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/checkbox_bg</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox_bg</item>
        <item name="android:buttonStyle">@style/CareWidget.Button</item>
        <item name="android:textViewStyle">@style/CareWidget.TextView</item>
        <!--
        <item name="emptyTextColor">@color/empty_text_color</item>
        <item name="emptyTextSize">@dimen/empty_text</item>
        -->
    </style>

    <style name="CareTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CareTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CareTheme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:listDivider">@drawable/line</item>
        <item name="android:listPreferredItemHeightSmall">78dp</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/checkbox_bg</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox_bg</item>
        <!--Settings the Dialog Title-->
        <item name="dialogTitleStyle">@style/CareDialog.Title</item>
        <item name="dialogMessageStyle">@style/CareDialog.Message</item>
        <item name="dialogButtonStyle">@style/CareDialog.Button</item>
        <item name="dialogButtonBackgrounds">@style/CareDialog.Button.Backgrounds</item>
    </style>
</resources>
