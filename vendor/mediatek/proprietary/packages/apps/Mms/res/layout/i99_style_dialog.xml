<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/i99_style_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">        
        <TextView
            android:id="@+id/i99_theme_dialog_title"
            android:layout_width="match_parent"
	        android:text="@string/slideshow_details"	    
            android:layout_height="@dimen/detail_title_height"
            android:background="@drawable/dialog_top_bar_bg"
            android:textSize="@dimen/i99dialog_title_textsize"
            android:textColor="#FFF"
            android:gravity="center"/>
   </RelativeLayout>

    <ListView
        android:id="@+id/i99_style_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/i99_dialog_bottom_bg"/>
</LinearLayout>
