<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"/>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="359pt"
	    android:orientation="horizontal"
	    android:layout_weight="7" >
	    <Button
	        android:id="@+id/menu_add_subject"
	        style="@style/vivo_menu_style"
	        android:drawableTop="@drawable/ic_menu_add_subject_icon"
	        android:text="@string/add_subject" 
                android:textSize="31px"/>
	    <TextView 
	       	android:id="@+id/create_group_chat_divider"
	        android:layout_width="1dip" 
	        android:layout_height="match_parent"
	        android:background="@drawable/i99_popumenu_divider" />	

	    <Button
	        android:id="@+id/menu_insert_contact"
	        style="@style/vivo_menu_style"
	        android:drawableTop="@drawable/ic_menu_insert_contact"
	        android:text="@string/menu_insert_text_vcard" 
                android:textSize="31px"/>
	    <TextView 
	       	android:id="@+id/create_group_chat_divider"
	        android:layout_width="1dip" 
	        android:layout_height="match_parent"
	        android:background="@drawable/i99_popumenu_divider" />	    	  
	    <Button 
		android:id="@+id/menu_insert_quick_text"
		style="@style/vivo_menu_style"
		android:drawableTop="@drawable/ic_menu_insert_quick_text"
		android:text="@string/menu_insert_quick_text"
                android:textSize="31px"/>	
	     <TextView 
	        android:layout_width="1dip" 
	        android:layout_height="match_parent"
	        android:background="@drawable/i99_popumenu_divider" />
	     <Button 
	        android:id="@+id/menu_chat_settings"
	        style="@style/vivo_menu_style"
	        android:drawableTop="@drawable/ic_menu_chat_settings_icon"
			android:visibility="gone"
	        android:text="@string/pref_setting_chat" />
	</LinearLayout>
</LinearLayout>
