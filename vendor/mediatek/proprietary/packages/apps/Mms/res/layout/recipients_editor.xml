<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/care_topbar_bg"
    android:orientation="horizontal">

    <com.android.mms.ui.RecipientsEditor
        android:id="@+id/recipients_editor"
        android:hint="@string/to_hint"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:inputType="textFilter"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:background="@drawable/vivo_edit_phone_bg"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
    />
    <!--added by yzs begin-->
	<View
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:layout_marginLeft="8dip"		
		android:background="@drawable/care_topbar_line"
	/>
    <!--added by yzs end-->
    <ImageButton android:id="@+id/recipients_picker"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/i99_add_contacts_bg"
        android:layout_marginLeft="0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#00000000"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
